
import datetime
import time

# Define the target day and time
target_day = 0 # 0 = Monday, 1 = Tuesday, etc.
target_hour = 20 # 24-hour format

# Get the current date and time
now = datetime.datetime.now()

# Calculate the time until the target day and time
days_to_target = (target_day - now.weekday()) % 7
time_to_target = datetime.timedelta(days=days_to_target, hours=target_hour) - \
                 datetime.timedelta(hours=now.hour, minutes=now.minute, seconds=now.second, microseconds=now.microsecond)

# Start the countdown loop
while time_to_target > datetime.timedelta():
    # Print the remaining time
    print(f"Time until {target_day} {target_hour}:00:00: {time_to_target}")
    # Wait for 1 second
    time.sleep(1)
    # Update the remaining time
    time_to_target -= datetime.timedelta(seconds=1)

# Countdown is over, print the final message
print(f"It's {target_day} {target_hour}:00:00!")
